<!DOCTYPE html>
<html lang="en">

<head>
    {{> head }}
</head>

<body class="bg-body-bg" x-data="dashboard">
    {{> preloader }}
    {{> sidebar }}
    <div class="container-fluid">
        <div class="main-content d-flex flex-column">
            {{> header }}
            <div class="main-content-container overflow-hidden">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card bg-white p-20 rounded-10 border border-white mb-4">
                            <div class="d-flex">
                                <div class="flex-grow-1">
                                    <h3 class="mb-10">Denuncias</h3>
                                    <h2 class="fs-26 fw-medium mb-0 lh-1" x-text="data.total_incidents"></h2>
                                </div>
                                <div class="flex-shrink-0 ms-3">
                                    <div class="bg-warning text-white text-center rounded-circle d-block"
                                        style="width: 75px; height: 75px; line-height: 105px;">
                                        <i class="material-symbols-outlined fs-40">warning</i>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center" style="margin-top: 21px;">
                                <p class="mb-0 fs-14">Total denuncias</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-white p-20 rounded-10 border border-white mb-4">
                            <div class="d-flex">
                                <div class="flex-grow-1">
                                    <h3 class="mb-10">Usuarios</h3>
                                    <h2 class="fs-26 fw-medium mb-0 lh-1" x-text="data.total_users"></h2>
                                </div>
                                <div class="flex-shrink-0 ms-3">
                                    <div class="bg-info text-white text-center rounded-circle d-block"
                                        style="width: 75px; height: 75px; line-height: 105px;">
                                        <i class="material-symbols-outlined fs-40">people</i>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center" style="margin-top: 21px;">
                                <p class="mb-0 fs-14">Total usuarios</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="card bg-white p-20 rounded-10 border border-white mb-4">
                            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                                <h3>Denuncias</h3>
                            </div>

                            <div id="total_denuncias_chart" style="margin-bottom: -16px; margin-top: -1.5px;"></div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card bg-white rounded-10 border border-white mb-4">
                            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3 p-20">
                                <h3>Denuncias recientes</h3>
                            </div>

                            <div class="default-table-area mx-minus-1 table-recent-orders">
                                <div class="table-responsive">
                                    <table class="table align-middle">
                                        <thead>
                                            <tr>
                                                <th scope="col" class="fw-medium">ID</th>
                                                <th scope="col" class="fw-medium">Usuario</th>
                                                <th scope="col" class="fw-medium">Distrito</th>
                                                <th scope="col" class="fw-medium">Tipo</th>
                                                <th scope="col" class="fw-medium">Estado</th>
                                                <th scope="col" class="fw-medium">Fecha</th>
                                                <th scope="col" class="fw-medium">Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <template x-for="report in data.recent_incidents" :key="report.id">
                                                <tr>
                                                    <td class="text-body" x-text="`#${report.id}`"></td>
                                                    <td>
                                                        <a :href="`/dashboard/users/${report.user_id}`"
                                                            class="d-flex align-items-center text-decoration-none">
                                                            <div class="flex-shrink-0">
                                                                <img src="assets/images/user1.jpg"
                                                                    class="rounded-circle"
                                                                    style="width: 50px; height: 50px;" alt="user1">
                                                            </div>
                                                            <div class="flex-grow-1 ms-12">
                                                                <h3 class="fw-medium hover-text mb-0 fs-16"><span
                                                                        x-text="report.user_name"></span></h3>
                                                            </div>
                                                        </a>
                                                    </td>
                                                    <td class="text-body" x-text="report.district"></td>
                                                    <td class="text-body" x-text="report._type_display"></td>
                                                    <td>
                                                        <span
                                                            class="bg-opacity-10 fs-15 fw-normal d-inline-block default-badge"
                                                            :class="{
                                                                'bg-warning text-warning': report.status === 'Pending',
                                                                'bg-info text-info': report.status === 'In Progress',
                                                                'bg-success text-success': report.status === 'Resolved'
                                                            }"
                                                            x-text="report.status === 'Pending' ? 'Pendiente' : report.status === 'Resolved' ? 'Resuelta' : 'En proceso'"></span>
                                                    </td>
                                                    <td class="text-body"
                                                        x-text="new Date(report.created_at).toLocaleDateString()"></td>
                                                    <td>
                                                        <div class="d-flex justify-content-end" style="gap: 12px;">
                                                            <button class="bg-transparent p-0 border-0"
                                                                data-bs-toggle="tooltip" data-bs-placement="top"
                                                                data-bs-title="Ver">
                                                                <i
                                                                    class="material-symbols-outlined fs-16 fw-normal text-primary">visibility</i>
                                                            </button>
                                                            <button
                                                                class="bg-transparent p-0 border-0 hover-text-danger"
                                                                data-bs-toggle="tooltip" data-bs-placement="top"
                                                                data-bs-title="Eliminar">
                                                                <i
                                                                    class="material-symbols-outlined fs-16 fw-normal text-body">delete</i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </template>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="flex-grow-1"></div>
            {{> footer }}
        </div>
    </div>
    <script type="module" src="/assets/js/actions/dashboard.js"></script>
    {{> scripts }}
</body>

</html>